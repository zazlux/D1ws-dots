function mount(){
  drive="$((echo "quit";lsblk -nro name,mountpoint | awk '$1~/[[:digit:]]/ && $2 == ""')|fzf)"
  if [ "$drive" != "quit" ];then
    label="$(lsblk -nro name,label,uuid|grep "$drive"|awk '{print $2}')"
    sudo mkdir -p /media/$USER/$label
    sudo mount -o umask=000 /dev/$drive /media/USER/$label
  fi
  exit 0
}

function unmount(){
  drive="$((echo "quit";lsblk -nro name,mountpoint | awk '$1~/[[:digit:]]/ && $2 != ""')|fzf)"
  if [ "$drive" != "quit" ];then
    #label="$(lsblk -nro name,label,uuid|grep "$drive"|awk '{print $2}')"
    drive="$(echo $drive|awk '{print $1}')"
    sudo umount /dev/$drive
    #sudo rm /media/$label
  fi
  exit 0
}

if [ "$1" = "u" ];then
  unmount
else
  mount
fi