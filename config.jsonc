{
    "layer": "bottom",
    "position": "bottom",
    "mod": "dock",
    "exclusive": true,
    "passtrough": false,
    "gtk-layer-shell": true,
    "height": 30,
    "modules-left": [
        "custom/arch",
        "hyprland/window"
    ],
    "modules-center": [],
    "modules-right": [
        "wlr/workspaces",
        "network",
        "pulseaudio",
        "hyprland/language",
        "clock",
        "tray",
        "custom/powermenu"

    ],
    "custom/arch": {
      "format": " ÔåÉ ",
      "tooltip": false,
      "on-click": "rofi -show drun -show-icons"
    },
    "custom/powermenu": {
      "format": " ÔÄë ",
      "tooltip": false,
      "on-click": "nwg-bar"
    },
"hyprland/language": {
    "format": "{}",
    "format-fr": "FR",
    "format-ara": "ARA"
},
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
      "(.*) - Mozilla Firefox": "üåé $1",
      "(.*) - fish": "> [$1]"
    }
    },
    "wlr/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}"
    },
