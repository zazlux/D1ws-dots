    //     "exec": "cat /tmp/kb_layout",
    //     "interval": 3,
    //     "format": "Ô†ã {}",
    //     "tooltip": false
    // },
    "tray": {
        "icon-size": 13,
        "tooltip": false,
        "spacing": 10
    },
    "network": {
  	"format": "{ifname}",
  	"format-wifi": " Ôá´  up" ,
  	"format-ethernet": "{ifname} ÔÉÅ",
  	"format-disconnected": "", //An empty format will hide the module.
  	"format-disconnected": "ÔÅ≤",
